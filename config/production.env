# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=${PRODUCTION_DATABASE_URL}
POSTGRES_HOST=${PRODUCTION_POSTGRES_HOST}
POSTGRES_PORT=${PRODUCTION_POSTGRES_PORT}
POSTGRES_DB=${PRODUCTION_POSTGRES_DB}
POSTGRES_USER=${PRODUCTION_POSTGRES_USER}
POSTGRES_PASSWORD=${PRODUCTION_POSTGRES_PASSWORD}

# Authentication
SESSION_SECRET=${PRODUCTION_SESSION_SECRET}
JWT_SECRET=${PRODUCTION_JWT_SECRET}

# External Services (Production)
STRIPE_SECRET_KEY=${PRODUCTION_STRIPE_SECRET_KEY}
VITE_STRIPE_PUBLIC_KEY=${PRODUCTION_STRIPE_PUBLIC_KEY}
OPENAI_API_KEY=${PRODUCTION_OPENAI_API_KEY}
ANTHROPIC_API_KEY=${PRODUCTION_ANTHROPIC_API_KEY}

# Email Configuration (Production)
SENDGRID_API_KEY=${PRODUCTION_SENDGRID_API_KEY}
FROM_EMAIL=noreply@orientmedical.com

# File Storage
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Cache Configuration
REDIS_URL=${PRODUCTION_REDIS_URL}
CACHE_TTL=7200

# Monitoring (Production)
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${PRODUCTION_NEW_RELIC_LICENSE_KEY}
DATADOG_API_KEY=${PRODUCTION_DATADOG_API_KEY}

# Security
CORS_ORIGIN=https://orientmedical.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50

# Performance
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000