# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database Configuration
DATABASE_URL=${STAGING_DATABASE_URL}
POSTGRES_HOST=${STAGING_POSTGRES_HOST}
POSTGRES_PORT=${STAGING_POSTGRES_PORT}
POSTGRES_DB=${STAGING_POSTGRES_DB}
POSTGRES_USER=${STAGING_POSTGRES_USER}
POSTGRES_PASSWORD=${STAGING_POSTGRES_PASSWORD}

# Authentication
SESSION_SECRET=${STAGING_SESSION_SECRET}
JWT_SECRET=${STAGING_JWT_SECRET}

# External Services (Staging)
STRIPE_SECRET_KEY=${STAGING_STRIPE_SECRET_KEY}
VITE_STRIPE_PUBLIC_KEY=${STAGING_STRIPE_PUBLIC_KEY}
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}
ANTHROPIC_API_KEY=${STAGING_ANTHROPIC_API_KEY}

# Email Configuration (Staging)
SENDGRID_API_KEY=${STAGING_SENDGRID_API_KEY}
FROM_EMAIL=staging@orientmedical.com

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Cache Configuration
REDIS_URL=${STAGING_REDIS_URL}
CACHE_TTL=3600

# Monitoring (Staging)
SENTRY_DSN=${STAGING_SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${STAGING_NEW_RELIC_LICENSE_KEY}
DATADOG_API_KEY=${STAGING_DATADOG_API_KEY}

# Security
CORS_ORIGIN=https://staging.orientmedical.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100